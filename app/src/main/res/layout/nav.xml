<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:fitsSystemWindows="true"
    android:id="@+id/navll"
    android:background="@color/juse">
    <LinearLayout
        android:id="@+id/navleftll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/navleftimgll"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >

        </LinearLayout>
        <TextView
            android:id="@+id/navlefttxt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="返回"
            android:gravity="center|left"
            android:textColor="@color/baise"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/navtxt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/baise"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/navrightll"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/navrightimgll1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:orientation="horizontal">

        </LinearLayout>
        <LinearLayout
        android:id="@+id/navrightimgll2"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="left|center"
        android:orientation="horizontal">

       </LinearLayout>
        <LinearLayout
            android:id="@+id/navrightimgll3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>